<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <typeAliases>
        <typeAlias type="org.example.member.dto.MemberDTO" alias="memberDTO"/>
        <typeAlias type="org.example.uploadpost.dto.PostDTO" alias="postDTO"/>
        <typeAlias type="org.example.uploadpost.dto.ImageDTO" alias="imageDTO"/>
        <typeAlias type="org.example.profile.dto.ProfileDTO" alias="profileDTO"/>
    </typeAliases>


    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
                <property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
                <property name="username" value="c##sqluser"/>
                <property name="password" value="1234"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!-- 회원 관련 매퍼 파일 -->
        <mapper resource="mappers/member.xml"/>
        <!-- 게시물 관련 매퍼 파일 -->
        <mapper resource="mappers/post.xml"/>
        <mapper resource="mappers/profile.xml" />
    </mappers>

</configuration>
